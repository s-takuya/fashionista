<% if @coordinates.present? %>
  <div class='coordinates_list'>
    <% @coordinates.each do |coordinate| %>
      <%= link_to coordinate do %>
        <div class='list'>
          <div class='list_body'>
            <% coordinate.photos.each do |photo| %>
              <%= image_tag photo.image.url, class: 'coordinate_image' %>
            <% end %>
            <div class='name'>
              <%= coordinate.owner.name %>
            </div>
            <div class='season'>
              dress_season: <%= coordinate.dress_season %>
            </div>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
<% else %>
  <div class='no_favorites text-center'>
    You have no favorite coordinates yet
  </div>
  <div class='go_top text-center'>
    <%= link_to 'Go to top', root_path, class: 'btn btn-default' %>
  </div>
<% end %>
