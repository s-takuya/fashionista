<header class='search_form text-center'>
  <div class='form-group'>
    <%= search_form_for @search do |f| %>
      <%= f.collection_select(:person_name_eq, Coordinate.select(:person_name).uniq, :person_name, :person_name, include_blank: 'person') %>
      <%= f.collection_select(:dress_season_eq, Coordinate.select(:dress_season).uniq, :dress_season, :dress_season, include_blank: 'season') %>
      <%= button_tag type: 'submit', class: 'btn btn-default' do %>
        <i class='fa fa-search'></i>
      <% end %>
    <% end %>
  </div>

  <div class='sign_in_link'>
    <% if user_signed_in? %>
      <%= link_to 'Log out', destroy_user_session_path, method: :delete, class: 'btn btn-default' %>
    <% else %>
      <%= link_to 'Sign in', user_session_path, class: 'btn btn-default' %>
    <% end %>
  </div>
</header>

<div class='post text-center'>
  <%= link_to 'Post Corde', new_coordinate_path, class: 'btn btn-default' %>
</div>

<% @coordinates.each do |coordinate| %>
  <%= link_to coordinate do %>
    <div class='coordinate_list'>
      <div class='list_body'>
        <% coordinate.photos.each do |photo| %>
          <%= image_tag photo.image.url, class: 'coordinate_image' %>
        <% end %>
        <div class='name'>
          <%= coordinate.person_name %>
        </div>
        <div class='season'>
          dress_season: <%= coordinate.dress_season %>
        </div>
      </div>
    </div>
  <% end %>
<% end %>
