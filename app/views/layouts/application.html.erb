<!DOCTYPE html>
<html>
<head>
  <title>Styly</title>
  <meta name='viewport' content='width=device-width, initial-scale=1'>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>
<body>
  <header>
    <nav class='navbar navbar-custom'>
      <div>
        <h3 class='logo text-center text-muted'><%= link_to 'Styly', root_path %></h3>
      </div>

      <% if user_signed_in? %>
        <div class='user_favorites text-center'>
          <%= link_to 'Favorites', favorites_path, class: 'btn btn-default' %>
        </div>
      <% end %>

      <% if user_signed_in? %>
        <div class='logout_link text-center'>
          <%= link_to 'Log out', destroy_user_session_path, method: :delete, class: 'btn btn-default' %>
        </div>
      <% else %>
        <div class='sign_in_link text-center'>
          <%= link_to 'Sign in', new_user_session_path, class: 'btn btn-default' %>
        </div>
      <% end %>
    </nav>
  </header>

  <p class='notice text-center'><%= notice %></p>
  <p class='alert text-center'><%= alert %></p>

<%= yield %>

</body>
</html>
